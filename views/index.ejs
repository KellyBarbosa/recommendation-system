<%- include ('partials/header.ejs') %>

  <body>

    <div class="container ">
      <% if(status=="success" ) { %>
        <div class="alert alert-success">
          <%=message%>
        </div>
        <% }%>
          <div class="d-flex flex-column vh-100 align-items-center justify-content-center">
            <div class="card text-bg-dark">
              <div class="card-header">
                <h2 class="text-center">Cadastro de usuÃ¡rios</h2>
              </div>
              <div class="card-body text-bg-light">
                <form method="post" action="/register">
                  <div class="input-group input-group-lg mb-3">
                    <span class="input-group-text">Email</span>
                    <input type="email" id="userEmail" class="form-control" name="email"
                      placeholder="Insira aqui o seu e-mail">
                    <button class="btn btn-outline-success">Cadastrar</button>
                  </div>

                </form>
              </div>
            </div>
          </div>

    </div>


    <% if(message.length !="" ) { %>
      <div class="toast align-items-center text-bg-success border-0" role="alert" aria-live="assertive"
        aria-atomic="true">
        <div class="d-flex">
          <div class="toast-body">
            <%=message%>
          </div>
          <button type="button" class="btn-close btn-close-white me-2 m-auto" data-bs-dismiss="toast"
            aria-label="Close"></button>
        </div>
      </div>
      <% }%>
  </body>

  <%- include ('partials/footer.ejs') %>