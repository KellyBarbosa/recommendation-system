<div class="d-flex flex-column vh-90 align-items-center justify-content-center">
  <div class="card text-bg-dark">
    <div class="card-header">
      <h2 class="text-center">Mensagens</h2>
    </div>
    <div class="card-body text-bg-light">
      <form method="post" action="/sendMessage">
        <p class="lead">
          Selecione as categorias desejadas:
        </p>
        <div class="container">
          <div class="input-group mb-3">
            <div class="form-check form-switch">
              <input class="form-check-input" type="checkbox" role="switch" name="switchAnime">
              <label class="form-check-label" for="switchAnime">Anime</label>
            </div>
          </div>

          <div class="input-group mb-3">
            <div class="form-check form-switch">
              <input class="form-check-input" type="checkbox" role="switch" name="switchTvShow">
              <label class="form-check-label" for="switchSerie">Programa de TV</label>
            </div>
          </div>

          <div class="input-group mb-3">
            <div class="form-check form-switch">
              <input class="form-check-input" type="checkbox" role="switch" name="switchFilme">
              <label class="form-check-label" for="switchFilme">Filme</label>
            </div>
          </div>
        </div>
        <div class="d-grid gap-2 ">
          <button class="btn btn-outline-success">Enviar mensagens</button>
        </div>
      </form>
    </div>
  </div>
</div>